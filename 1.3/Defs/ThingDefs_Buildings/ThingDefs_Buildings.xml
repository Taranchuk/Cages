<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="FurnitureWithQualityBase">
    <defName>CCK_SmallCageAnimal</defName>
    <label>small cage</label>
    <description>PLACEHOLDER.</description>
	<tickerType>Normal</tickerType>
    <thingClass>Cages.Building_Cage</thingClass>
    <graphicData>
      <texPath>Things/Building/Cages/SmallCageBottom</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(2.5,1)</drawSize>
    </graphicData>
    <drawerType>MapMeshAndRealTime</drawerType>
    <uiIconPath>Things/Building/Cages/SmallCage_MenuIcon</uiIconPath>
    <altitudeLayer>Building</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <fillPercent>0.4</fillPercent>
    <castEdgeShadows>true</castEdgeShadows>
    <pathCost>150</pathCost>
    <stuffCategories>
      <li>Metallic</li>
      <li>Woody</li>
      <li>Stony</li>
    </stuffCategories>
    <costStuffCount>30</costStuffCount>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <Mass>8</Mass>
      <WorkToBuild>600</WorkToBuild>
      <Flammability>1.0</Flammability>
      <Beauty>0.5</Beauty>
    </statBases>
    <size>(2,1)</size>
    <defaultPlacingRot>North</defaultPlacingRot>
    <hasInteractionCell>True</hasInteractionCell>
    <interactionCellOffset>(2,0,0)</interactionCellOffset>
    <building>
      <gibbetCageTopGraphicData>
        <texPath>Things/Building/Cages/SmallCageTop</texPath>
        <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(2.5,1)</drawSize>
        <shaderType>Cutout</shaderType>
      </gibbetCageTopGraphicData>
      <ignoreStoredThingsBeauty>true</ignoreStoredThingsBeauty>
      <fixedStorageSettings>
        <filter>
          <disallowNotEverStorable>true</disallowNotEverStorable>
          <categories>
            <li>Foods</li>
          </categories>
        </filter>
      </fixedStorageSettings>
      <defaultStorageSettings>
        <priority>Important</priority>
        <filter>
          <categories>
            <li>FoodRaw</li>
          </categories>
        </filter>
      </defaultStorageSettings>
    </building>
    <inspectorTabs>
      <li>ITab_Storage</li>
    </inspectorTabs>
    <designationHotKey>Misc12</designationHotKey>
    <staticSunShadowHeight>0.5</staticSunShadowHeight>
    <surfaceType>Item</surfaceType>
    <canOverlapZones>false</canOverlapZones>
    <researchPrerequisites>
      <li>ComplexFurniture</li>
    </researchPrerequisites>
    <comps>
      <li Class="CompProperties_Styleable" />
    </comps>
	<modExtensions>
		<li Class="Cages.CageExtension">
			<maxBodySizeTarget>1</maxBodySizeTarget>
		</li>
	</modExtensions>
  </ThingDef>
  
</Defs>